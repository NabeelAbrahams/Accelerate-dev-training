{%- comment -%} Auto Generated Variables start {%- endcomment -%}
{%- liquid
  assign image = section.settings.image
  assign section_layout = section.settings.section_layout
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign responsive_visibility = section.settings.responsive_visibility
  assign color_scheme = section.settings.color_scheme
  assign sectionID = section.settings.sectionID
-%}
{%- comment -%} Auto Generated Variables end {%- endcomment -%}

<div id="{{ sectionID }}" class="image-with-text w-screen h-[75vh] bg-white {{ section_layout }} {{ color_scheme }} {{ padding_top }} {{ padding_bottom }} {{ responsive_visibility }}">
  <div class="h-full grid md:grid-cols-2">
    <section class="flex-1 w-full flex items-center justify-center overflow-hidden">
      <figure class="relative grid flex-1 min-h-full">
        {% render 'image', image: image, width: 1400, placeholder: 'image' %}
      </figure>
    </section>
    <section class="h-full w-full flex flex-col py-8">
      <div class="w-full">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'text' %}
            {% render 'richtext.text', block: block %}
            {% when 'buttons' %}
            {% render 'richtext.buttons', block: block %}
            {% when 'typewriter' %}
            {% render 'richtext.typewriter', block: block %}
            {% when 'features' %}
            {% render 'richtext.features', block: block %}
          {% endcase %}
        {% endfor %}
      </div>
      </div>
    </section>
  </div>
</div>